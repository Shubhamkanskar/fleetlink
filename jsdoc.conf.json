{
    "source": {
        "include": [
            "./src/",
            "./server.js",
            "./config/"
        ],
        "includePattern": "\\.(js|jsx)$",
        "excludePattern": "(node_modules/|tests/|coverage/)"
    },
    "opts": {
        "destination": "./docs/",
        "recurse": true,
        "template": "node_modules/docdash"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    },
    "docdash": {
        "static": true,
        "sort": true,
        "search": true,
        "collapse": false,
        "wrap": true,
        "typedefs": true,
        "removeQuotes": "none",
        "menu": {
            "Project Home": {
                "href": "https://github.com/yourusername/fleetlink",
                "target": "_blank"
            }
        }
    }
}